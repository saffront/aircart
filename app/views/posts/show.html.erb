<div class="page-header text-center posts">
  <%= image_tag @post.image.url, class: 'item-image' %>
  <h1><%= @post.item %><br> <small>Submitted by <%= @post.user.name %></small></h1>
  <br />
  <p><%= @post.description %><br />
    <span><i class="fa fa-map-pin"></i><%= @post.country %></span><br />
    <span><i class="fa fa-folder"></i><%= @post.category %></span><br />
    <span><i class="fa fa-link"></i><a><%= @post.url %></a></span>
  </p>
</div>

<div class="btn-group col-sm-5- col-sm-offset-5">
  <%= link_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @post.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
    <%= @post.get_downvotes.size %>
  <% end %>
</div>

<% if @post.user == current_user -%>
	<div class="btn-group">
		<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
		<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>
