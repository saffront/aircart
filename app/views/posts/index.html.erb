<div class="transitions-enabled row" id="posts">
<% @posts.each do |post| %> <!-- for loop for 4 elements in a row, print 4 for each roop in a nested for loop -->
  <div class="box col-sm-3">
    <%= image_tag(post.image.url, class: 'item-image') %>
      <h2>
        <%= link_to post.item, post %><br>
        <small class=""><%= post.country %></small><br />
        <small class="author">Submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %></small>
      </h2>

      <div class="btn-group">
        <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-chevron-up"></span>
          Upvote
          <%= post.get_upvotes.size %>
        <% end %>
        <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="glyphicon glyphicon-chevron-down">
          Downvote
          <%= post.get_downvotes.size %>
        <% end %>
      </div>
  </div>
<% end %>
</div>
